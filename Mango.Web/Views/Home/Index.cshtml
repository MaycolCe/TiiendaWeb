@model IEnumerable<ProductDto>

<form>
    <div class="container">
        <div class="row">
            @foreach (var product in Model)
            {
                <div class="col-12 col-md-6 col-lg-4 d-flex">
                    @* Hace que las tarjetas tengan el mismo alto *@
                    <div class="card flex-grow-1 d-flex flex-column border rounded my-3">
                        <h3 class="card-title text-white-50 text-center py-2">@product.Name</h3>
                        <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name">
                        <div class="card-body d-flex flex-column justify-content-between">
                            <div>
                                <div class="d-flex justify-content-between py-2">
                                    <span class="text-danger" style="font-size:20px;">
                                        @string.Format("{0:c}", product.Price)
                                    </span>
                                    <span class="badge bg-warning text-white p-2">@product.CategoryName</span>
                                </div>
                                <p class="card-text">@Html.Raw(product.Description)</p>
                            </div>
                            <div class="row mt-auto">
                                <div class="col">
                                    <a asp-action="ProductDetails" asp-route-productId="@product.ProductId" class="btn btn-success form-control">Detalles</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</form>


